@model BakeryRose.Models.Proveedores

@{
    ViewData["Title"] = "Nuevo Proveedor";
}

<h1 class="mb-4" style="color:#ad1457;">➕ Nuevo Proveedor</h1>

<form asp-action="Create" method="post" class="p-4 bg-white rounded shadow-sm">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Empresa" class="form-label"></label>
        <input asp-for="Empresa" class="form-control" />
        <span asp-validation-for="Empresa" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NumeroContacto" class="form-label"></label>
        <input asp-for="NumeroContacto" class="form-control" />
        <span asp-validation-for="NumeroContacto" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



