<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Bakery Rose 🧁</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:#f9f0f5;">
    <nav class="navbar navbar-expand navbar-light bg-pink mb-4" style="background-color:#fce4ec;">
        <div class="container">
            <a class="navbar-brand" asp-controller="Proveedores" asp-action="Index">🧁 Bakery Rose</a>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="text-center mt-5 mb-3 text-muted">
        &copy; 2025 Bakery Rose
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


